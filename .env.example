# Supabase Database Configuration
# Replace these values with your actual Supabase database credentials

# Database connection details (get these from Supabase dashboard)
DATABASE_URL=your_database_url_here

# Google Cloud Storage settings
# Create a bucket with a globally unique name in Google Cloud Console
# Suggested format: sinhala-asr-audio-dataset-2025
# Replace with your actual bucket name
GCS_BUCKET_NAME=sinhala-asr-audio-dataset-2025

# GCP Authentication (Optional - for production deployment)
# Base64 encoded service account JSON for secure deployment
SERVICE_ACCOUNT_B64=your_base64_encoded_service_account_json

# Application Settings
DEBUG=true

# Audio Processing Settings (Optional - uses defaults if not set)
# AUDIO_LEASE_TIMEOUT_MINUTES=15
# MAX_TRANSCRIPTIONS_PER_AUDIO=2
# ANNOTATIONS_PER_CLIP=2